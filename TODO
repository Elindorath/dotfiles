<plist version="1.0">
<dict>
	<key>containerURLs</key>
	<array>
		<string>file:///nfs/zfs-student-2/users/jwestpha/Downloads/Meslo%20LG%20M%20DZ%20Regular%20for%20Powerline.otf</string>
	</array>
	<key>disabled</key>
	<false/>
	<key>name</key>
	<string>Powerline</string>
	<key>reference</key>
	<integer>2</integer>
</dict>
</plist>



